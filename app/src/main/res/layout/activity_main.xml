<?xml version="1.0" encoding="utf-8"?>
<peter.util.searcher.RootContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_h"
        android:background="@color/title_bg">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="@dimen/menu_w"
            android:layout_height="@dimen/menu_h"
            android:src="@drawable/menu_"
            android:scaleType="center"
            android:background="@drawable/menu_selector"/>

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_bg_"
            android:gravity="center_vertical"
            android:hint="@string/search"
            android:layout_toRightOf="@+id/menu"
            android:drawableLeft="@drawable/search_icon"
            android:imeOptions="actionSearch"
            android:paddingRight="@dimen/input_padding_right"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor" />

        <ImageView
            android:id="@+id/operate"
            android:layout_width="@dimen/operate_cell"
            android:layout_height="@dimen/operate_cell"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/search_padding"
            android:contentDescription="@string/search"
            android:src="@drawable/operate" />
    </RelativeLayout>

    <WebView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title" />

    <GridView
        android:id="@+id/engine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="#e0000000"
        android:columnWidth="60dp"
        android:gravity="center"
        android:numColumns="5"
        android:stretchMode="columnWidth"
        android:visibility="invisible">

    </GridView>

</peter.util.searcher.RootContainer>