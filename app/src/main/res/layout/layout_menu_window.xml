<?xml version="1.0" encoding="utf-8"?>


<peter.util.searcher.view.DialogContainer xmlns:android="http://schemas.android.com/apk/res/android"
                                          android:id="@+id/menu_window_container"
                                          android:layout_width="match_parent"
                                          android:layout_height="match_parent">

    <peter.util.searcher.view.MenuWindowGridView
        android:id="@+id/menu_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/multi_item_selector"
        android:columnWidth="200dp"
        android:divider="@color/transparent"
        android:gravity="center"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:stackFromBottom="true"
        android:stretchMode="columnWidth"/>

</peter.util.searcher.view.DialogContainer>

