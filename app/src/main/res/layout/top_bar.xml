<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_h"
    android:background="@android:color/white">

    <peter.util.searcher.view.ObservableEditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/input_margin"
        android:layout_marginRight="@dimen/input_margin"
        android:layout_marginTop="@dimen/input_margin"
        android:background="@drawable/input_bg"
        android:drawablePadding="@dimen/drawable_padding"
        android:hint="@string/search_hint"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:paddingLeft="@dimen/drawable_padding"
        android:selectAllOnFocus="true"
        android:paddingRight="@dimen/search_padding_right" />

    <ImageView
        android:id="@+id/opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/clear_txt_margin_right"
        android:onClick="onClick"
        android:paddingLeft="10dp"
        android:src="@drawable/opt_level" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/title_bg"
        android:text="速搜"
        android:textSize="17sp"
        android:visibility="gone" />
</FrameLayout>
