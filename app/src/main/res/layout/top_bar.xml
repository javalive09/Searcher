<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_h"
    android:background="@color/colorPrimary_">

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/search"
        android:imeOptions="actionDone"
        android:textColorHint="@color/edit_text_no_focus"
        android:textColor="@android:color/white"
        android:paddingLeft="@dimen/drawable_padding"
        android:paddingRight="@dimen/search_padding_right"
        android:drawablePadding="@dimen/drawable_padding"
        android:drawableLeft="@drawable/search_icon"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/clear_txt_margin_right"
        android:onClick="onClick"
        android:paddingLeft="10dp"
        android:src="@drawable/opt_level" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/title_bg"
        android:text="速搜"
        android:textSize="17sp"
        android:visibility="gone" />
</FrameLayout>
