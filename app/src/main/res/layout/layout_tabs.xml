<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true">


    <FrameLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/add_tab"
            style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
            android:layout_width="@dimen/multi_window_item_icon_cell"
            android:layout_height="@dimen/multi_window_item_icon_cell"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/multi_window_icon_margin"
            android:layout_marginRight="@dimen/multi_window_icon_margin"
            android:onClick="onClick"
            android:src="@drawable/tabs_add" />

        <ImageView
            android:id="@+id/close_tabs"
            style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
            android:layout_width="@dimen/multi_window_item_icon_cell"
            android:layout_height="@dimen/multi_window_item_icon_cell"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/multi_window_icon_margin"
            android:layout_marginRight="@dimen/multi_window_icon_margin"
            android:onClick="onClick"
            android:src="@drawable/stop" />

        <TextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tabs_title" />

    </FrameLayout>

    <ListView
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"
        android:layout_margin="2dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="2dp" />

