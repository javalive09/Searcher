<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/multi_window_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/multi_window_item_h"
    android:background="@drawable/dialog_item_selector"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/multi_window_item_icon_cell"
        android:layout_height="@dimen/multi_window_item_icon_cell"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/multi_window_icon_margin"
        android:layout_marginRight="@dimen/multi_window_icon_margin"
        android:background="@drawable/web_site_icon" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0px"
        android:layout_height="@dimen/multi_window_item_h"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/close_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/multi_window_icon_margin"
        android:layout_marginRight="@dimen/multi_window_icon_margin"
        android:background="@drawable/clear" />

</LinearLayout>
