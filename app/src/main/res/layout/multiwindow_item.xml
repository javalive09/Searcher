<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/multi_window_item"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_margin="@dimen/multi_window_icon_margin"
    android:background="@drawable/tabs_selector_item"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/multi_window_item_icon_cell"
        android:layout_height="@dimen/multi_window_item_icon_cell"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/multi_window_icon_margin"
        android:layout_marginRight="@dimen/multi_window_icon_margin"
        android:background="@drawable/ic_website" />

    <TextView
        android:id="@+id/title"
        style="@style/btn_normal_style"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/close_tab"
        style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/multi_window_close_padding"
        android:paddingRight="@dimen/multi_window_close_padding"
        android:src="@drawable/ic_clear" />

</LinearLayout>
