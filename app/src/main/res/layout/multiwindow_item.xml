<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/multi_window_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_h"
    android:layout_margin="10dp"
    android:background="@drawable/tabs_selector_item"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/multi_window_item_icon_cell"
        android:layout_height="@dimen/multi_window_item_icon_cell"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/multi_window_icon_margin"
        android:layout_marginRight="@dimen/multi_window_icon_margin"
        android:background="@drawable/ic_explore" />

    <TextView
        android:id="@+id/title"
        style="@style/normal_tab_txt_style"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/close_tab"
        style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_close_clear_tint" />

</LinearLayout>
