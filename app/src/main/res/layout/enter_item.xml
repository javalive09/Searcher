<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/title_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/menu_selector"
            android:src="@drawable/feedback"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/menu_selector"
            android:src="@drawable/setting_w"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/setting_version_margin"
        android:drawablePadding="@dimen/setting_version_drawable_padding"
        android:drawableTop="@drawable/icon"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/enter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/enter_icon_h"
        android:layout_below="@+id/version"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/enter_item_margin"
        android:layout_marginLeft="@dimen/enter_item_margin"
        android:layout_marginRight="@dimen/enter_item_margin"
        android:background="@drawable/search_bg_"
        android:gravity="center"
        android:text="@string/search"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/enter_icon_text_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/hot_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/enter_item_h"
        android:layout_below="@+id/enter"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/enter_item_margin"
        android:layout_marginRight="@dimen/enter_item_margin"
        android:background="@drawable/enter_item_selector"
        android:gravity="center"
        android:text="@string/history_today_title"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/favorite_url"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/hot_list"
        android:layout_gravity="center"
        android:layout_margin="@dimen/enter_item_margin"
        android:background="@drawable/enter_item_selector"
        android:gravity="center"
        android:text="@string/favorite_url_title"
        android:visibility="gone" />

</RelativeLayout>