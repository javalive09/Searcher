<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/paste"
        android:layout_width="0px"
        android:layout_height="@dimen/top_h"
        android:layout_weight="1"
        android:background="@drawable/list_item_selector">

        <TextView
            android:id="@+id/paste_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_content_paste_selector"
            android:gravity="center"
            android:text="@string/paste_txt" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/enter"
        android:layout_width="0px"
        android:layout_height="@dimen/top_h"
        android:layout_weight="1"
        android:background="@drawable/list_item_selector">

        <TextView
            android:id="@+id/enter_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_enter_selector"
            android:gravity="center"
            android:text="@string/enter_txt" />
    </FrameLayout>
</LinearLayout>