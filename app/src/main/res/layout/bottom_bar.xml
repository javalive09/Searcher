<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chrome_top_color"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/go_forward"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/bar_forward_selector"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/ic_action_search"
        android:visibility="visible" />

    <TextView
        android:id="@+id/multi_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/opt_multi_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:scaleType="center"
        android:textColor="@color/chrome_txt_color"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/bottom_menu_chrome_color" />


</LinearLayout>
