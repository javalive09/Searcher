<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chrome_top_color"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/go_back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bottom_bar_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/btn_left_selector" />

    <ImageView
        android:id="@+id/go_forward"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bottom_bar_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/btn_right_selector" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bottom_bar_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/btn_toolbar_home"
        android:visibility="visible"/>

    <FrameLayout
        android:id="@+id/multi_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bottom_bar_selector"
        android:onClick="onClick">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/btn_tabswitcher" />

        <TextView
            android:id="@+id/multi_btn_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="center"
            android:text="11"
            android:textColor="@android:color/black"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </FrameLayout>


    <ImageView
        android:id="@+id/menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bottom_bar_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/btn_menu" />


</LinearLayout>
