    <ImageView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/bar_back_selector"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/go"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/bar_forward_selector"
        android:visibility="visible" />

    <EditText
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/abc_ic_search_api_mtrl_alpha"
        android:focusable="false"
        android:hint="@string/search"
        android:theme="@style/BottomEditText"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/search_btn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/bar_search"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/refresh"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="@dimen/bottom_item_w"
        android:layout_height="match_parent"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/toolbar_home"
        android:visibility="gone" />

    <TextView
        android:id="@+id/multi_window"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/multi_window_top_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/bottom_menu" />


</LinearLayout>
