<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_h"
    android:background="@color/title_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_h"
        android:layout_weight="1"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/bar_back_selector" />

    <ImageView
        android:id="@+id/go"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_h"
        android:layout_weight="1"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/bar_forward_selector" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_h"
        android:layout_weight="1"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/close" />

    <TextView
        android:id="@+id/multi_window"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_h"
        android:layout_weight="1"
        android:background="@drawable/multi_window_top_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:textSize="10sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/menu"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_h"
        android:layout_weight="1"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/bottom_menu" />


</LinearLayout>
