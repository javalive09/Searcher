<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/go_back"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/btn_left_selector" />

    <ImageView
        android:id="@+id/go_forward"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/btn_right_selector" />

    <ImageView
        android:id="@+id/home"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/tint_bitmap_home"
        android:tint="@color/tint_color"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/bookmark"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/tint_bitmap_favorite"
        android:tint="@color/tint_color"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/multi_btn"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="onClick">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tint_bitmap_tabs"
            android:tint="@color/tint_color" />

        <TextView
            android:id="@+id/multi_btn_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="center"
            android:text="1"
            android:textColor="@color/tint_color"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </FrameLayout>

</LinearLayout>
