    <ImageView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/bar_back_selector"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/go"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/bar_forward_selector"
        android:visibility="visible" />

    <HorizontalScrollView
        android:id="@+id/bottom_search_btn_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_weight="2"
        android:background="@drawable/input_bg_gray"
        android:scrollbars="none">

        <TextView
            android:id="@+id/bottom_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="none"
            android:gravity="center_vertical"
            android:hint="@string/search_hint"
            android:padding="5dp"
            android:scaleType="center"
            android:clickable="false"
            android:singleLine="true"
            android:textColorHint="@color/multi_text_color_gray"
            android:visibility="visible" />
    </HorizontalScrollView>

    <TextView
        android:id="@+id/multi_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/opt_multi_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:scaleType="center"
        android:textColor="@color/chrome_txt_color"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/menu_selector"
        android:onClick="onClick"
        android:scaleType="center"
        android:src="@drawable/bottom_menu_chrome_color" />


</LinearLayout>
