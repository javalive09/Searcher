<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:popupMenuStyle">@style/PopupMenu</item>-->
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/list_selector_item</item>
    </style>

    <style name="txt_title_style" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:textColor">@color/chrome_txt_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btn_normal_style" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/chrome_txt_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="toolbar_edittext_main_style" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/tint_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/toolbar_shape_cursor</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="toolbar_edittext_search_style" parent="@style/toolbar_edittext_main_style">
        <item name="android:drawableLeft">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/progress_color</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>


</resources>
